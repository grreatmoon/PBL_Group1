<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartFragment">


    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="背景"
        android:scaleType="centerCrop"
        android:src="@drawable/start_background_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/level_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        android:elevation="2dp"
        android:fontFamily="@font/maruminya"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="Lv. 1"
        android:textColor="#FFFFFF"
        android:textSize="45sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.056"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/kaihouritsu_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="解放率"
        android:textSize="25sp"
        android:background="@drawable/rounded_text_bg"
        android:textColor="#FFFFFF"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:fontFamily="@font/maruminya"

        android:layout_marginTop="36dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/gauge_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/kaihouritsu_text"
        app:layout_constraintStart_toStartOf="@+id/kaihouritsu_text"
        app:layout_constraintEnd_toEndOf="@+id/kaihouritsu_text">

        <ProgressBar
            android:id="@+id/kaihouritsu_progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="20dp"
            android:layout_height="100dp"
            android:indeterminate="false"
            android:max="100"
            android:progressDrawable="@drawable/vertical_progress_bar"
            tools:progress="30"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/mark_line_25"
            android:layout_width="30dp"  android:layout_height="1dp" android:background="#FFFFFF" app:layout_constraintTop_toTopOf="@+id/kaihouritsu_progress_bar"
            app:layout_constraintBottom_toBottomOf="@+id/kaihouritsu_progress_bar"
            app:layout_constraintStart_toStartOf="@+id/kaihouritsu_progress_bar"
            app:layout_constraintEnd_toEndOf="@+id/kaihouritsu_progress_bar"
            app:layout_constraintVertical_bias="0.75" />

        <View
            android:id="@+id/mark_line_50"
            android:layout_width="30dp"
            android:layout_height="1dp"
            android:background="#FFFFFF"
            app:layout_constraintTop_toTopOf="@+id/kaihouritsu_progress_bar"
            app:layout_constraintBottom_toBottomOf="@+id/kaihouritsu_progress_bar"
            app:layout_constraintStart_toStartOf="@+id/kaihouritsu_progress_bar"
            app:layout_constraintEnd_toEndOf="@+id/kaihouritsu_progress_bar"
            app:layout_constraintVertical_bias="0.5" />

        <View
            android:id="@+id/mark_line_75"
            android:layout_width="30dp"
            android:layout_height="1dp"
            android:background="#FFFFFF"
            app:layout_constraintTop_toTopOf="@+id/kaihouritsu_progress_bar"
            app:layout_constraintBottom_toBottomOf="@+id/kaihouritsu_progress_bar"
            app:layout_constraintStart_toStartOf="@+id/kaihouritsu_progress_bar"
            app:layout_constraintEnd_toEndOf="@+id/kaihouritsu_progress_bar"
            app:layout_constraintVertical_bias="0.25" />

        <TextView
            android:id="@+id/mark_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0%"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            app:layout_constraintStart_toEndOf="@+id/kaihouritsu_progress_bar"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toTopOf="@+id/kaihouritsu_progress_bar"
            app:layout_constraintBottom_toBottomOf="@+id/kaihouritsu_progress_bar"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/mark_25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25%"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            app:layout_constraintStart_toEndOf="@+id/kaihouritsu_progress_bar"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/kaihouritsu_progress_bar"
            app:layout_constraintBottom_toBottomOf="@+id/kaihouritsu_progress_bar"
            app:layout_constraintVertical_bias="0.75" />

        <TextView
            android:id="@+id/mark_50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50%"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            app:layout_constraintStart_toEndOf="@+id/kaihouritsu_progress_bar"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/kaihouritsu_progress_bar"
            app:layout_constraintBottom_toBottomOf="@+id/kaihouritsu_progress_bar"
            app:layout_constraintVertical_bias="0.5" />

        <TextView
            android:id="@+id/mark_75"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="75%"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            app:layout_constraintStart_toEndOf="@+id/kaihouritsu_progress_bar"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/kaihouritsu_progress_bar"
            app:layout_constraintBottom_toBottomOf="@+id/kaihouritsu_progress_bar"
            app:layout_constraintVertical_bias="0.25" />

        <TextView
            android:id="@+id/mark_100"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100%"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            app:layout_constraintStart_toEndOf="@+id/kaihouritsu_progress_bar"
            android:layout_marginStart="6dp"
            app:layout_constraintTop_toTopOf="@+id/kaihouritsu_progress_bar"
            app:layout_constraintBottom_toBottomOf="@+id/kaihouritsu_progress_bar"
            app:layout_constraintVertical_bias="0.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/energy_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:fontFamily="@font/maruminya"
        android:background="@drawable/rounded_text_bg"
        android:textColor="#FFFFFF"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        tools:text="0 / 100" app:layout_constraintTop_toTopOf="@+id/energy_progress_bar"
        app:layout_constraintBottom_toBottomOf="@+id/energy_progress_bar"
        app:layout_constraintStart_toStartOf="@+id/energy_progress_bar"
        app:layout_constraintEnd_toEndOf="@+id/energy_progress_bar"
        android:elevation="2dp" />

    <ProgressBar
        android:id="@+id/energy_progress_bar"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:indeterminate="false"
        android:progressDrawable="@drawable/progress_circle"
        android:background="@android:color/transparent"
        style="?android:attr/progressBarStyleHorizontal"
        android:max="100"
        tools:progress="50"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/level_text"
        app:layout_constraintStart_toStartOf="@+id/level_text" />

    <TextView
        android:id="@+id/status_text"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="0dp"
        tools:text="停止中"
        android:textSize="18sp"
        android:fontFamily="@font/maruminya"
        android:background="@drawable/rounded_text_bg"
        android:textColor="#FFFFFF"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        app:layout_constraintTop_toBottomOf="@+id/energy_progress_bar"
        app:layout_constraintStart_toStartOf="@+id/energy_progress_bar"
        app:layout_constraintEnd_toEndOf="@+id/energy_progress_bar"
        />

    <com.example.pbl_gruop1.AlphaThresholdImageButton
        android:id="@+id/to_map_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="88dp"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:contentDescription="マップへ移動"
        android:focusable="true"
        android:scaleType="centerCrop"
        android:src="@drawable/map_button_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="W,1:1.5"
        app:layout_constraintEnd_toStartOf="@+id/to_syougou_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.50" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:text="マップ"
        android:textColor="#000000"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/to_map_button"
        app:layout_constraintEnd_toEndOf="@+id/to_map_button"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/to_map_button"
        app:layout_constraintTop_toTopOf="@+id/to_map_button"
        app:layout_constraintVertical_bias="0.407"
        android:fontFamily="@font/jf_dot_font"/>

    <com.example.pbl_gruop1.AlphaThresholdImageButton
        android:id="@+id/to_syougou_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="88dp"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:contentDescription="称号リストへ移動"
        android:focusable="true"
        android:scaleType="centerCrop"
        android:src="@drawable/title_list_button_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="W,1:1.5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/to_map_button"
        app:layout_constraintWidth_percent="0.60" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:text="バッヂ"
        android:textColor="#000000"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/to_syougou_button"
        app:layout_constraintEnd_toEndOf="@+id/to_syougou_button"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="@+id/to_syougou_button"
        app:layout_constraintTop_toTopOf="@+id/to_syougou_button"
        app:layout_constraintVertical_bias="0.491"
        android:fontFamily="@font/jf_dot_font"/>

</androidx.constraintlayout.widget.ConstraintLayout>
