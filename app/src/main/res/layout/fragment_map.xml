<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00d76b"
    tools:context=".MapFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/map_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/image_view_map_base"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/zentai"
            android:scaleType="fitCenter"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <ImageView
            android:id="@+id/mask_myosenji"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/mask_myosenji"
            android:scaleType="fitCenter"
            app:layout_constraintTop_toTopOf="@id/image_view_map_base"
            app:layout_constraintBottom_toBottomOf="@id/image_view_map_base"
            app:layout_constraintStart_toStartOf="@id/image_view_map_base"
            app:layout_constraintEnd_toEndOf="@id/image_view_map_base"/>

        <ImageView
            android:id="@+id/mask_genkipark"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/mask_genkipark"
            android:scaleType="fitCenter"
            app:layout_constraintTop_toTopOf="@id/image_view_map_base"
            app:layout_constraintBottom_toBottomOf="@id/image_view_map_base"
            app:layout_constraintStart_toStartOf="@id/image_view_map_base"
            app:layout_constraintEnd_toEndOf="@id/image_view_map_base"/>

        <ImageView
            android:id="@+id/mask_koshi_city_hall"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/mask_koshi_city_hall"
            android:scaleType="fitCenter"
            app:layout_constraintTop_toTopOf="@id/image_view_map_base"
            app:layout_constraintBottom_toBottomOf="@id/image_view_map_base"
            app:layout_constraintStart_toStartOf="@id/image_view_map_base"
            app:layout_constraintEnd_toEndOf="@id/image_view_map_base"/>

        <ImageView
            android:id="@+id/mask_luther_church"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/mask_luther_church"
            android:scaleType="fitCenter"
            app:layout_constraintTop_toTopOf="@id/image_view_map_base"
            app:layout_constraintBottom_toBottomOf="@id/image_view_map_base"
            app:layout_constraintStart_toStartOf="@id/image_view_map_base"
            app:layout_constraintEnd_toEndOf="@id/image_view_map_base"/>

        <ImageView
            android:id="@+id/mask_country_park"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/mask_country_park"
            android:scaleType="fitCenter"
            app:layout_constraintTop_toTopOf="@id/image_view_map_base"
            app:layout_constraintBottom_toBottomOf="@id/image_view_map_base"
            app:layout_constraintStart_toStartOf="@id/image_view_map_base"
            app:layout_constraintEnd_toEndOf="@id/image_view_map_base"/>

        <ImageView
            android:id="@+id/mask_benten_mountain"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/mask_benten_mountain"
            android:scaleType="fitCenter"
            app:layout_constraintTop_toTopOf="@id/image_view_map_base"
            app:layout_constraintBottom_toBottomOf="@id/image_view_map_base"
            app:layout_constraintStart_toStartOf="@id/image_view_map_base"
            app:layout_constraintEnd_toEndOf="@id/image_view_map_base"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/level_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Lv."
        android:textSize="45sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.114"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/rounded_text_bg"
        android:textColor="#FFFFFF"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"/>

    <TextView
        android:id="@+id/kaihouritsu_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="解放率"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.791"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/rounded_text_bg"
        android:textColor="#FFFFFF"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"/>

    <TextView
        android:id="@+id/energy_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="エネルギー: 0 / 100"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kaihouritsu_text"

        android:background="@drawable/rounded_text_bg"
        android:textColor="#FFFFFF"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"/>

    <ProgressBar
        android:id="@+id/energy_progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:max="100"
        android:progress="50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/energy_text" />

    <TextView
        android:id="@+id/status_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="状態: 停止中"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/energy_progress_bar"

        android:background="@drawable/rounded_text_bg"
        android:textColor="#FFFFFF"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"/>


    <!-- 下ボタン -->

    <!-- 上ボタン -->

    <!-- 左ボタン -->

    <!-- 右ボタン -->

    <!-- +ボタン -->

    <!-- タッチ操作切り替えボタン -->

    <!-- -ボタン -->

    <!-- ▼▼▼ モード切替用のボタンを追加 ▼▼▼ -->
    <Button
        android:id="@+id/button_toggle_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="マップ操作モード"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/button_back_to_start_from_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#FFA500"
        android:text="戻る"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>